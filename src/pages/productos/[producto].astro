---

<Layout title={`${productoActual?.nombre || 'Producto no encontrado'} - Ferretería Patricio`}>
	<div class="container mx-auto px-4 py-8">
		<!-- Breadcrumb -->
		<nav class="text-sm mb-8">
			<ol class="list-none p-0 inline-flex">
				<li class="flex items-center">
					<a href="/" class="text-gray-500 hover:text-blue-600">Inicio</a>
					<svg class="w-2 h-2 mx-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
					</svg>
				</li>
				<li class="flex items-center">
					<a href="/productos" class="text-gray-500 hover:text-blue-600">Productos</a>
					<svg class="w-2 h-2 mx-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
					</svg>
				</li>
				<li class="text-gray-800">{productoActual?.nombre || 'Producto no encontrado'}</li>
			</ol>
		</nav>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			<!-- Imagen del producto -->
			<div class="bg-white p-8 rounded-lg shadow-sm">
				<img src={productoActual?.imagen} alt={productoActual?.nombre} class="w-full h-auto object-contain">
			</div>

			<!-- Detalles del producto -->
			<div>
				<h1 class="text-3xl font-bold mb-4">{productoActual?.nombre}</h1>

				<!-- Precio -->
				<div class="text-2xl font-bold text-blue-600 mb-6">${productoActual?.precio?.toLocaleString('es-CL')} / Unidad</div>

				<!-- Descripción -->
				<div class="prose max-w-none mb-8">
					<p>{productoActual?.descripcion}</p>
				</div>

				<!-- Características -->
				<div class="mb-8">
					<h2 class="text-xl font-semibold mb-4">Características</h2>
					<ul class="space-y-2">
						{productoActual?.caracteristicas.map(caracteristica => (
							<li class="flex items-center">
								<span class="mr-2 text-sm">✓</span> {caracteristica}
							</li>
						))}
					</ul>
				</div>
			</div>
		</div>

		<!-- Productos similares -->
		<section class="mt-16">
			<h2 class="text-2xl font-bold mb-8">Productos Similares</h2>
			<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
				<a href="/productos/destornillador-pequeno" class="bg-white p-4 rounded-lg shadow-sm hover:shadow-lg transition-all transform hover:-translate-y-1">
					<img src="/destornillador-pequeno.svg" alt="Destornillador pequeño" class="w-full h-48 object-contain mb-4">
					<h3 class="font-semibold">Destornillador pequeño</h3>
					<p class="text-sm text-gray-600">Multipropósito de 1 a 6</p>
					<p class="text-blue-600 mt-2">$6.890</p>
				</a>

				<a href="/productos/kit-destornillador" class="bg-white p-4 rounded-lg shadow-sm hover:shadow-lg transition-all transform hover:-translate-y-1">
					<img src="/kit-destornillador.svg" alt="Kit para destornillador" class="w-full h-48 object-contain mb-4">
					<h3 class="font-semibold">Kit para destornillador</h3>
					<p class="text-sm text-gray-600">Con 45 piezas</p>
					<p class="text-blue-600 mt-2">$14.990</p>
				</a>

				<a href="/productos/destornillador-magnetico" class="bg-white p-4 rounded-lg shadow-sm hover:shadow-lg transition-all transform hover:-translate-y-1">
					<img src="/destornillador-magnetico.svg" alt="Destornillador Magnético" class="w-full h-48 object-contain mb-4">
					<h3 class="font-semibold">Destornillador Magnético</h3>
					<p class="text-sm text-gray-600">6.35mm de 1 a 9 piezas</p>
					<p class="text-blue-600 mt-2">$4.590</p>
				</a>

				<a href="/productos/destornillador-impacto" class="bg-white p-4 rounded-lg shadow-sm hover:shadow-lg transition-all transform hover:-translate-y-1">
